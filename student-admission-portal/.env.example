APP_NAME="Student Admission Portal"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration (Production usually MySQL)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=student_portal
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public # Change to 's3' in production
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (For OTP & Notifications)
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="no-reply@school.edu"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration (For Document Storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# --------------------------------------------------------------------------
# ASP System Integration (Internal Network)
# --------------------------------------------------------------------------
ASP_BASE_URL=http://internal-asp-system/api
ASP_API_KEY=your-production-api-key
ASP_API_SECRET=your-production-hmac-secret
ASP_TIMEOUT=30

# --------------------------------------------------------------------------
# M-Pesa Payment Gateway
# --------------------------------------------------------------------------
MPESA_ENVIRONMENT=sandbox # or production
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_SHORTCODE=
MPESA_PASSKEY=
MPESA_CALLBACK_URL="${APP_URL}/api/v1/payments/callback"
MPESA_APPLICATION_FEE=1000

# --------------------------------------------------------------------------
# SMS Gateway Configuration
# --------------------------------------------------------------------------
SMS_PROVIDER=africastalking # Options: africastalking, twilio

# Africa's Talking
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_API_KEY=
AFRICASTALKING_SENDER_ID=

# Twilio (Alternative)
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=

VITE_APP_NAME="${APP_NAME}"
